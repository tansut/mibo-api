{
    "compilerOptions": {
        "watch": true,
        "target": "es6",
        "module": "commonjs",
        "declaration": false,
        "noImplicitAny": false,
        "removeComments": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "listFiles": false,
        "outDir": "bin",
        "rootDir": "src",
        "suppressImplicitAnyIndexErrors": true
    },
    "exclude": [
        "node_modules/**"
    ]
}